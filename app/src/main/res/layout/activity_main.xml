<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background0"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonSistemeGiris"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginEnd="490dp"
        android:layout_marginBottom="275dp"
        android:backgroundTint="#69F5E3"
        android:fontFamily="@font/francois_one"
        android:text="SİSTEME GİRİŞ"
        android:textColor="#0C3731"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonKitapAra"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="252dp"
        android:backgroundTint="#69F5E3"
        android:fontFamily="@font/francois_one"
        android:text="KİTAP ARA"
        android:textColor="#0C3731"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonKategoriAra"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="414dp"
        android:layout_marginTop="152dp"
        android:backgroundTint="#69F5E3"
        android:fontFamily="@font/francois_one"
        android:text="KATEGORİLER"
        android:textColor="#0C3731"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonYazarAra"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="84dp"
        android:backgroundTint="#69F5E3"
        android:fontFamily="@font/francois_one"
        android:text="YAZARLAR"
        android:textColor="#0C3731"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>