<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAC9">

    <TextView
        android:id="@+id/textViewKitapKayitID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/francois_one"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textViewKitapAlisTarihi"
        app:layout_constraintStart_toStartOf="@+id/textViewKitapAlisTarihi"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/francois_one"
        android:text="Kayıt ID :"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView40"
        app:layout_constraintTop_toBottomOf="@+id/textView40" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/francois_one"
        android:text="Alış Tarihi :"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/rvKitapTeslim"
        app:layout_constraintTop_toBottomOf="@+id/textViewKitapTeslimAlYazarAd" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/francois_one"
        android:text="Yazar Adı :"
        android:textColor="@color/red"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/rvKitapTeslim"
        app:layout_constraintTop_toBottomOf="@+id/textViewKitapTeslimAlKitapAd" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/francois_one"
        android:text="Kitap Adı :"
        android:textColor="@color/green"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/rvKitapTeslim"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvKitapTeslim"
        android:layout_width="800dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/layout_bg_corner_radius2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewKitapTeslimAlKitapAd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/francois_one"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="textVisiblePassword|textMultiLine|textNoSuggestions"
        android:text="kitap adi"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView38"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewKitapTeslimAlYazarAd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/francois_one"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="textVisiblePassword|textMultiLine|textNoSuggestions"
        android:text="yazar adı"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/textViewKitapTeslimAlKitapAd"
        app:layout_constraintStart_toStartOf="@+id/textViewKitapTeslimAlKitapAd"
        app:layout_constraintTop_toBottomOf="@+id/textViewKitapTeslimAlKitapAd" />

    <TextView
        android:id="@+id/textViewKitapAlisTarihi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/francois_one"
        android:text="15.12.2021"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/textViewKitapTeslimAlYazarAd"
        app:layout_constraintStart_toStartOf="@+id/textViewKitapTeslimAlYazarAd"
        app:layout_constraintTop_toBottomOf="@+id/textViewKitapTeslimAlYazarAd" />

    <TextView
        android:id="@+id/textViewTarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/francois_one"
        android:text="TARİH"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonKitapTeslimAl"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/francois_one"
        android:text="TESLİM AL"
        android:textSize="24sp"
        android:visibility="invisible"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rvKitapTeslim"
        app:layout_constraintTop_toBottomOf="@+id/textViewKitapAlisTarihi" />

</androidx.constraintlayout.widget.ConstraintLayout>