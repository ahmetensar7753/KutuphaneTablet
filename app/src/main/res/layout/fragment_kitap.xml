<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutKitapFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FAFAC9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/red"
        app:tabMaxWidth="550dp"
        app:tabMinWidth="500dp"
        app:tabSelectedTextColor="@color/red"
        app:tabTextColor="@color/green" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2KitapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#FAFAC9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayoutKitapFragment" />
</androidx.constraintlayout.widget.ConstraintLayout>